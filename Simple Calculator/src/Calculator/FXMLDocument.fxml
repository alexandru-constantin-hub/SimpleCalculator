<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane id="AnchorPane" prefHeight="200" prefWidth="320" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Calculator.FXMLDocumentController">
    <Label fx:id="result" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="4" prefHeight="20" prefWidth="Infinity"  />
    <Button fx:id="one" onAction="#one" GridPane.columnIndex="0" GridPane.rowIndex="1">1</Button>
    <Button fx:id="two" onAction="#two" GridPane.columnIndex="1" GridPane.rowIndex="1">2</Button>
    <Button fx:id="three" onAction="#three" GridPane.columnIndex="2" GridPane.rowIndex="1">3</Button>
    <Button fx:id="plus" onAction="#plus" GridPane.columnIndex="3" GridPane.rowIndex="1">+</Button>
    <Button fx:id="four" onAction="#four" GridPane.columnIndex="0" GridPane.rowIndex="2">4</Button>
    <Button fx:id="five" onAction="#five" GridPane.columnIndex="1" GridPane.rowIndex="2">5</Button>
    <Button fx:id="six" onAction="#six" GridPane.columnIndex="2" GridPane.rowIndex="2">6</Button>
    <Button fx:id="minus" onAction="#minus" GridPane.columnIndex="3" GridPane.rowIndex="2">-</Button>
    <Button fx:id="seven" onAction="#seven" GridPane.columnIndex="0" GridPane.rowIndex="3">7</Button>
    <Button fx:id="eight" onAction="#eight" GridPane.columnIndex="1" GridPane.rowIndex="3">8</Button>
    <Button fx:id="nine" onAction="#nine" GridPane.columnIndex="2" GridPane.rowIndex="3">9</Button>
    <Button fx:id="multiply" onAction="#multiply" GridPane.columnIndex="3" GridPane.rowIndex="3">*</Button>
    <Button fx:id="equal" onAction="#equal" GridPane.columnIndex="0" GridPane.rowIndex="4" GridPane.columnSpan="2">=</Button>
    <Button fx:id="cancel" onAction="#cancel" GridPane.columnIndex="1" GridPane.rowIndex="4">C</Button>
    <Button fx:id="zero" onAction="#zero" GridPane.columnIndex="2" GridPane.rowIndex="4">0</Button>
    <Button fx:id="divided" onAction="#divided" GridPane.columnIndex="3" GridPane.rowIndex="4">/</Button>
</GridPane>
